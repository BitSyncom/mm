# Global controls
NET "CLK" LOC = K12;

# UART <-> FT232
NET "RXD" LOC = R14; # FT232's TX
NET "TXD" LOC = R12; # FT232's RX

# UART debug

# LED
NET "LED[0]" LOC = J11;
NET "LED[1]" LOC = J12;
NET "LED[2]" LOC = J13;
NET "LED[3]" LOC = J14;

# SPI Flash: W25Q80BV
NET "FLASH_MISO" LOC = P10;
NET "FLASH_MOSI" LOC = T10;
NET "FLASH_SCK" LOC = R11;
NET "FLASH_NCS" LOC = T3;

NET "*" IOSTANDARD = LVCMOS33;

NET "CLK" TNM_NET = "CLK";
TIMESPEC TS_clk = PERIOD "CLK" 30 ns HIGH 50 %;
